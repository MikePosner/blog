<h1 style:text-align:center>文章列表页面</h1>
<%# new_article_path中new_article对应的是rake routes中控制器articles的new动作 _path是一个固定的后缀 %>
<div class="link"><%= link_to '创建新文章', new_article_path %></div>
<table class="div">
  <tr>
     <th></th>
    <th>标题</th>
    <th>内容</th>
	<th>操作</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
	  <td><%= image_tag "303719-106.jpg", size: "50x50", alt: " " %></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
	  <td><%= link_to '查看详细内容', article_path(article) %></td>
      <td><%= link_to '修改文章', edit_article_path(article) %></td>
	  <td><%= link_to '删除文章', article_path(article), method: :delete, data: { confirm: '你确定要删除这篇文章?' } %></td>
    </tr>
  <% end %>
</table>
<style type="text/css">
  .div{
    margin:0 auto;
    width:900px;
    height:400px;
  }
  .link{
    position: relative;
    left: 330px;
  }
  move{
    position: relative;
    left: 330px;
  }
</style>